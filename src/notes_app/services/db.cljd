;; Update sync conflict record
(defn update-sync-conflict [id resolution resolved-data description]
  (let [^drift/AppDatabase db @db]
    (if resolved-data
      (.customStatement db
                        "UPDATE sync_conflicts SET resolution = ?, resolved_at = ?, resolved_data = ?, description = ? WHERE id = ?"
                        [resolution (dart:core/DateTime.now) resolved-data description id])
      (.customStatement db
                        "UPDATE sync_conflicts SET resolution = ?, resolved_at = ?, description = ? WHERE id = ?"
                        [resolution (dart:core/DateTime.now) description id]))))

;; Clean up resolved conflict records
(defn cleanup-resolved-sync-conflicts []
  (let [^drift/AppDatabase db @db]
    (.go
     (doto (.delete db (.-syncConflicts db))
       (.where (fn [^drift/SyncConflicts tbl] (.not (.equals (.-resolution tbl) "pending"))))))))