       (.where (fn [^drift/Notes tbl] (.equals (.-syncStatus tbl) "pending")))
       (.orderBy [(fn [^drift/Notes tbl] (d/OrderingTerm. .expression (.-updatedAt tbl) .mode d/OrderingMode.asc))])))))

